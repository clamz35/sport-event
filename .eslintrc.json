{
  "root": true,
  "overrides": [
    {
      "files": ["cypress/e2e/**/*.{cy,spec}.{js,ts,jsx,tsx}"],
      "extends": ["plugin:cypress/recommended"]
    },
    {
      "files": ["**/*.ts", "*.mts", "*.cts", "*.tsx"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": "error"
      }
    }
  ],

  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "latest"
  }
}
